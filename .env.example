# ==============================================
# Docker Compose Orquestador - ComandesJSDR
# ==============================================
# Copiar aquest fitxer a .env i configurar les variables

# ----------------------------------------------
# Configuració de Ports
# ----------------------------------------------
API_PORT=5000
FRONT_PORT=5173

# ----------------------------------------------
# Configuració de MariaDB
# ----------------------------------------------
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=databaseapi
MYSQL_USER=userapi
MYSQL_PASSWORD=passwordapi
MYSQL_PORT=3306

# ----------------------------------------------
# Configuració JWT
# ----------------------------------------------
JWT_SECRET_KEY=ClauSecretaJWTComandesJSDR2025MoltSeguraAmbAlmenys32Caracters!
JWT_ISSUER=ComandesJSDR
JWT_AUDIENCE=ComandesJSDR-API

# ----------------------------------------------
# Configuració CORS
# ----------------------------------------------
# URLs permeses per CORS (separades per comes)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ----------------------------------------------
# Configuració Frontend
# ----------------------------------------------
# URL de l'API per al frontend (usar http://localhost:${API_PORT}/api)
VITE_API_URL=http://localhost:5000/api

# ----------------------------------------------
# Entorn d'Execució
# ----------------------------------------------
ASPNETCORE_ENVIRONMENT=Development
